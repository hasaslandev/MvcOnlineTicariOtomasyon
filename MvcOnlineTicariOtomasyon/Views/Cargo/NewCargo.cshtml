@model MvcOnlineTicariOtomasyon.Models.Classes.CargoDetail
@{
    ViewBag.Title = "CargoAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Kargo Bilgisi</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.TrackingCode)
    <input type="text" value="@ViewBag.trackingcode" class="form-control" readonly name="TrackingCode" />
    <br />
    @Html.LabelFor(x => x.Employee)
    @Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Receiver)
    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Date)
    <input class="form-control" type="date" name="date" />
    <br />
    @Html.LabelFor(x => x.Statement)
    @Html.TextAreaFor(x => x.Statement, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>


</form>
