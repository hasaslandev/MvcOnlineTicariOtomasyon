@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.GroupClass3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Striped Full Width Table</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{sirano++;}</td>
                        <td>@item.brand</td>
                        <td>
                            @if (item.number >= 1 && item.number<=2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.number >= 3 && item.number <= 4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (item.number >= 5 && item.number <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 70%"></div>
                                </div>
                            }
                            @if (item.number >=6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-fuchsia" style="width: 70%"></div>
                                </div>
                            }

                        </td>
                        <td>
                            @switch (item.number)
                            {
                                case 1:
                                    <span class="badge bg-danger">@item.number</span>
                                    break;
                                case 2:
                                    <span class="badge bg-danger">@item.number</span>
                                    break;
                                case 3:
                                    <span class="badge bg-warning">@item.number</span>
                                    break;
                                case 4:
                                    <span class="badge bg-fuchsia">@item.number</span>
                                    break;
                                case 5:
                                    <span class="badge bg-fuchsia">@item.number</span>
                                    break;
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>