@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Bill>
@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri-Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>

    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.BillSerialNumber @k.BillRankNumber</td>
    <td>@k.Date</td>
    <td>@k.Hour</td>
    <td>@k.ReceiverPerson</td>
    <td>@k.DeliveryPerson</td>
    <td>@k.Total $</td>
    <td><a href="/Bill/BillGet/@k.BillId" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Bill/BillDetail/@k.BillId" class="btn btn-default" style="background-color:lightcoral;color:white;font:italic">Detaylar</a></td>
    <td><a href="/Bill/BillDetail/@k.BillId" class="btn btn-default" style="background-color:lavender;font:italic">Kalem</a></td>

</tr>}
</table>
<a href="/Bill/BillAdd" class="btn btn-info">Yeni Fatura Ekle</a>
<br />
<br />
<button type="button" class="btn btn warning" style="background-color:#b6ff00; color:white" data-toggle="modal" data-target="#Modal1">
    Pupup Penceresi
</button>


<div class="modal" id="#Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup diyalog ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BillSerialNumber</td>
                            <td>@item.BillRankNumber</td>
                            <td>@item.Total</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>



