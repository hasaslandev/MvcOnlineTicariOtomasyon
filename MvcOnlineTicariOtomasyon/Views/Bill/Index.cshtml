@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Bill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.BillId</td>
            <td>@k.BillSerialNumber</td>
            <td>@k.BillRankNumber</td>
            <td>@k.TaxAdministration</td>
            <td>@k.Date</td>
            <td>@k.Hour</td>
            <td>@k.ReceiverPerson</td>
            <td>@k.DeliveryPerson</td>
            <td>@k.Total</td>
            <td><a href="/Bill/BillGet/@k.BillId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Bill/BillDetail/@k.BillId" class="btn btn-default" style="background-color:lightcoral;color:white;font:italic">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Bill/BillAdd" class="btn btn-info">Yeni Fatura Ekle</a>



