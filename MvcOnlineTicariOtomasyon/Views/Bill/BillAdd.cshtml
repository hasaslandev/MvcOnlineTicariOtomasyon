@model MvcOnlineTicariOtomasyon.Models.Classes.Bill
@{
    ViewBag.Title = "BillAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Fatura Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.BillSerialNumber)
    @Html.TextBoxFor(x => x.BillSerialNumber, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BillRankNumber)
    @Html.TextBoxFor(x => x.BillRankNumber, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Date)
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Hour)
    @Html.TextBoxFor(x => x.Hour, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.TaxAdministration)
    @Html.TextBoxFor(x => x.TaxAdministration, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ReceiverPerson)
    @Html.TextBoxFor(x => x.ReceiverPerson, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.DeliveryPerson)
    @Html.TextBoxFor(x => x.DeliveryPerson, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Kaydet</button>
    <br />
</form>

