@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<BillPencil>
@{
    ViewBag.Title = "BillDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4" style="background-color:darkgrey">
    <li class="breadcrumb-item active"></li>
</ol>

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.BillPencilId</td>
            <td>@x.Statement</td>
            <td>@x.Quantity</td>
            <td>@x.UnitPrice</td>
            <td>@x.Amount</td>
         </tr>
    }

</table>
<a href="/Bill/NewPencil/" class="btn btn-default" style="background-color:darksalmon">Yeni Kalem Girişi</a>


